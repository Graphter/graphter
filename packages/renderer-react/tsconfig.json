{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "outDir": "./dist",
    "target": "es5",
    "jsx": "react",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true

  },
  "include": [
    "src/**/*",
    "src/**/*.pcss"
  ],
  "exclude": [
    "node_modules"
  ]
}