.item{
  color: #39404b;
  background-color: rgba(255,255,255,0.9);
  padding: 1em 1em 1em 1.5em;
  margin-bottom: 5px;
  border-radius: 0.2em;
  box-shadow: rgba(0,0,0,0.2) 0 3px 10px, inset 15px 0 0 0 white;
}

@supports (backdrop-filter: blur(10px)) {
  .item {
    background-color: rgba(255,255,255,0.7);
    backdrop-filter: blur(10px);
  }
}

.title{
  font-size: 2rem;
}
.subtext{
  display: block;
  opacity: 0.7;
}